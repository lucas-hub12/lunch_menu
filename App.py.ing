def insert_menu(menu_name, member_name, dt):
    try:
        conn = get_connection()
        cursor = conn.cursor()
        cursor.execute(
                  "INSERT INTO lunch_menu (menu_name, member_name, dt) VALUES (%s,%s,%s);",
                  (menu_name, member_name, dt)
                  )
        conn.commit()
        cursor.close()
        conn.close()
        return True
    except Exception as e:
           print(f"Exception:{e}:")
           return False

